{
  "services": [
    {
      "name": "pocketbase",
      "image": "ghcr.io/pocketbase/pocketbase:0.22.13",
      "isMain": true,
      "internalPort": "8090",
      "command": "serve --http=0.0.0.0:8090 --dir /pb_data --publicDir /pb_public --hooksDir /pb_hooks",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/pb_data",
          "containerPath": "/pb_data",
          "readOnly": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/pb_public",
          "containerPath": "/pb_public",
          "readOnly": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/pb_hooks",
          "containerPath": "/pb_hooks",
          "readOnly": false
        }
      ],
      "restart": "unless-stopped"
    }
  ]
}
