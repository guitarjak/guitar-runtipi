{
  "services": [
    {
      "name": "blinko-website",
      "image": "blinkospace/blinko:latest",
      "isMain": true,
      "internalPort": 1111,
      "environment": {
        "NODE_ENV": "production",
        "NEXTAUTH_URL": "http://${LOCAL_DOMAIN}",
        "NEXT_PUBLIC_BASE_URL": "http://${LOCAL_DOMAIN}",
        "NEXTAUTH_SECRET": "${NEXTAUTH_SECRET}",
        "DATABASE_URL": "postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/postgres"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app/.blinko"
        }
      ],
      "dependsOn": ["postgres"],
      "healthCheck": {
        "test": "wget --spider -q http://localhost:1111/ || exit 1",
        "interval": "30s",
        "timeout": "10s",
        "retries": 5,
        "startPeriod": "30s"
      }
    },
    {
      "name": "postgres",
      "image": "postgres:14",
      "environment": {
        "POSTGRES_DB": "postgres",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U postgres -d postgres",
        "interval": "5s",
        "timeout": "10s",
        "retries": 5
      }
    }
  ]
}
